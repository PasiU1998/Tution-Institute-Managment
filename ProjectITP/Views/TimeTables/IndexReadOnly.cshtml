@model IEnumerable<ProjectITP.Models.TimeTable>

@{
    ViewBag.Title = "Index";
    
}

<h2 style="font-family:fantasy">Time Tables</h2>


<table class="table table-hover table-bordered" id="TimeTable">
    <thead>
        <tr class="bg-primary">
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeTableImage)
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    <a href="~/Images/@item.TimeTableImage">@Html.DisplayFor(modelItem => item.TimeTableImage)</a>
                </td>
                
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


    <script>
        $(document).ready(function () {
            var table = $("#TimeTable").DataTable();

        });
    </script>
    }

