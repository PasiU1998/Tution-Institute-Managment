@model IEnumerable<ProjectITP.Models.ApplicationUser>

@{
    ViewBag.Title = "StudentUser";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 style="font-family:fantasy">Academic Employee</h1>


<p>
    @Html.ActionLink("Add New Acadamic Employee", "RegisterAcadamicEmployee", "", new { @class = "btn btn-success" })
</p>


<hr />

@Html.ActionLink("Export To Excel", "AcadamicReports", new { ReportType = "Excel" }, new { @class = "btn btn-primary" }) |
@Html.ActionLink("Export To Pdf", "AcadamicReports", new { ReportType = "Pdf" }, new { @class = "btn btn-primary" }) |
@Html.ActionLink("Export To word", "AcadamicReports", new { ReportType = "Word" }, new { @class = "btn btn-primary" }) |
@Html.ActionLink("Export To Image", "AcadamicReports", new { ReportType = "Image" }, new { @class = "btn btn-primary" }) |

<hr />


<table id="AcadamicUser" class="table table-hover table-bordered">

    <thead>
        <tr class="bg-primary">

            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.TelephoneNumber)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th></th>
        </tr>


    </thead>

    <tbody>

        @foreach (var item in Model)
        {


            if (item.IsTeacher == true)
            {

                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TelephoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditAcadamicEmployee", new { id = item.Id }, new { @class = "btn btn-primary" }) |

                        @Html.ActionLink("Delete", "DeleteAcadamicEmployee", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        }


    </tbody>
</table>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


    <script>
        $(document).ready(function () {
            var table = $("#AcadamicUser").DataTable();

        });
    </script>


}

