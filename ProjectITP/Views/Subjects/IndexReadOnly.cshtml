@model IEnumerable<ProjectITP.Models.Subject>

@{
    ViewBag.Title = "Index";

}




<br />
<br />



<h1 style="font-family:fantasy">Scholarship</h1>

<hr />



<table id="subjects" class="table table-hover table-bordered">


    <thead>
        <tr class="bg-primary">
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.enrollmentKey)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.grade)
            </th>
            <th>
                Teacher's Name
            </th>


        </tr>


    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.SubjectCategory.Id == 1)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.enrollmentKey)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.grade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApplicationUser.Name)
                    </td>




                </tr>
            }
        }
    </tbody>
</table>


